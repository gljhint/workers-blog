{
	"name": "workers-blog",
	"version": "1.0.0",
	"private": true,
	"description": "一个基于 Next.js 和 Cloudflare 构建的现代博客",
	"author": "ljhint",
	"license": "MIT",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "wrangler d1 migrations apply my-blog-db",
		"db:push:local": "wrangler d1 migrations apply my-blog-db --local",
		"db:studio": "drizzle-kit studio"
	},
	"dependencies": {
		"@opennextjs/cloudflare": "^1.6.5",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-label": "^2.1.7",
		"@tiptap/extension-color": "^3.3.0",
		"@tiptap/extension-image": "^3.3.0",
		"@tiptap/extension-link": "^3.3.0",
		"@tiptap/extension-list-item": "^3.3.0",
		"@tiptap/extension-text-align": "^3.3.0",
		"@tiptap/react": "^3.3.0",
		"@tiptap/starter-kit": "^3.3.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/jsonwebtoken": "^9.0.10",
		"bcryptjs": "^3.0.2",
		"date-fns": "^4.1.0",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.4",
		"jsonwebtoken": "^9.0.2",
		"lucide-react": "^0.541.0",
		"next": "15.4.6",
		"react": "19.1.0",
		"react-dom": "19.1.0"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20.19.11",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"tailwindcss": "^4",
		"tsx": "^4.20.4",
		"typescript": "^5",
		"wrangler": "^4.31.0"
	}
}
